<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/relative_name"
        style="@style/relative" >

        <TextView
            android:id="@+id/order_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="订单编号:"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/order_txt"
            android:layout_toRightOf="@+id/order_txt"
            android:text="1010100101010010"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/money_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_txt"
            android:layout_below="@+id/order_txt"
            android:layout_marginTop="10dp"
            android:text="订单金额:"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/money_txt"
            android:layout_toRightOf="@+id/money_txt"
            android:text="200"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/money_txt"
            android:layout_below="@+id/money_txt"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:text="时间"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/money_txt"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/txt_money"
            android:text="状态:"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/status_txt"
            android:layout_toRightOf="@+id/status_txt"
            android:text="未确认"
            android:textColor="#969696" />

        <ImageView
            style="@style/ListTheme"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/category_first_arrow" />
    </RelativeLayout>

</RelativeLayout>