<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#A61A05" >

        <TextView
            android:id="@+id/txt_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购买成功"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="您的订单已经提交成功，我们会尽快安排发货!"
        android:textColor="#D90000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@mipmap/button_long_selected" >

        <TextView
            android:id="@+id/order_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="您的订单号:"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/order_txt"
            android:layout_toRightOf="@+id/order_txt"
            android:text="1010100101010010"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/money_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_txt"
            android:layout_below="@+id/order_txt"
            android:layout_marginTop="10dp"
            android:text="支付金额:"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/money_txt"
            android:layout_alignTop="@+id/money_txt"
            android:text="200"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/payment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/money_txt"
            android:layout_below="@+id/money_txt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="支付方式:"
            android:textColor="#969696" />

        <TextView
            android:id="@+id/txt_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/payment_txt"
            android:layout_alignTop="@+id/payment_txt"
            android:text="到付"
            android:textColor="#969696" />
    </RelativeLayout>
    <Button
                android:id="@+id/btn_tobuy"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/buy_btn_selector"
                android:text="继续购物" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@mipmap/button_long_selected">

        <TextView
            android:id="@+id/order_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lines="2"
            android:text="如有疑问，您可以拨打客户名称电话，我们真诚为您服务:400-820-8888"
            android:textColor="#969696" />

    </RelativeLayout>
    

</LinearLayout>