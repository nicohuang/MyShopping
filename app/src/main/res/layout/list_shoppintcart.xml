<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txt_name"
        style="@style/cartList"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/pic"
        android:text="牛奶" />

    <TextView
        android:id="@+id/txt_count"
        style="@style/cartList"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/pic"
        android:text="数量 :"
        android:textColor="#A8A8A8" />

    <TextView
        android:id="@+id/count"
        style="@style/cartList"
        android:layout_alignTop="@+id/txt_count"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txt_count"
        android:text="2"
        android:textColor="#A8A8A8" />

    <TextView
        android:id="@+id/txt_price"
        style="@style/cartList"
        android:layout_below="@+id/txt_count"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/pic"
        android:text="价格 :"
        android:textColor="#A8A8A8" />

    <TextView
        android:id="@+id/price"
        style="@style/cartList"
        android:layout_alignTop="@+id/txt_price"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txt_price"
        android:text="200"
        android:textColor="#D90000" />

    <TextView
        android:id="@+id/txt_money"
        style="@style/cartList"
        android:layout_below="@+id/txt_price"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/pic"
        android:text="小计 :"
        android:textColor="#D90000" />

    <TextView
        android:id="@+id/money"
        style="@style/cartList"
        android:layout_alignTop="@+id/txt_money"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txt_money"
        android:text="400"
        android:textColor="#D90000" />

</RelativeLayout>